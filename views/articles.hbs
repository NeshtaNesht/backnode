
        <div class="news" >
            {{#each news}}
                <a href="/articlesread/{{this.id}}">
                    <div class="article" id="{{this.id}}">
                        <p id="zagolovok">
                            {{this.zagolovok}}
                            <span id="category">
                                {{this.name}}
                            </span>
                        </p>
                        <p id="date">Опубликовано: {{this.date}}</p>
                        <p id="text"><span style="margin-right: 5px;">➜</span>{{this.text}}</p>

                    </div>
                </a>                
            {{/each}}
        </div>
        
    